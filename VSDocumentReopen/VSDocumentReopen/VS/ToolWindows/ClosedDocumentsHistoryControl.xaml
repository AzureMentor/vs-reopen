<UserControl x:Class="VSDocumentReopen.VS.ToolWindows.ClosedDocumentsHistoryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:DesignHeight="250" d:DesignWidth="800"
             Name="DocumentHistory">
    <ListView Margin="2" Name="_listView" VerticalAlignment="Top" 
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                ScrollViewer.CanContentScroll="True" 
                SelectionMode="Single">
        <ListView.View>
            <GridView>
                <GridViewColumn Width="300" Header="File path" DisplayMemberBinding="{Binding FullName}" />
                <GridViewColumn Width="180" Header="File name" DisplayMemberBinding="{Binding Name}" />
                <GridViewColumn Width="180" Header="Closed at" DisplayMemberBinding="{Binding ClosedAt}" />
            </GridView>
        </ListView.View>
    </ListView>
</UserControl>
